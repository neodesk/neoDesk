<div class="col-12 user">
  <div class="user_info">
    <img class="user_avatar" src="<%= faker.internet.avatar() %>" alt="user" />

    <div class="user_description">
      <div class="user_description_column">
      <a href="/operator/users/edit/<%= user.id %>"> <%= user.first_name + ' ' + user.last_name %></a>
        <span><%= user.user_organization.name %></span>
      </div>

      <div class="user_description_column">
        <span><%= user.email %></span>
        <span><%= user.cellphone_number %></span>
      </div>

      <div class="user_description_column">
        <span><%= user.user_job.name %></span>
        <span><%= user.user_job.seniority %></span>
      </div>
    </div>
  </div>

  <div class="actions">
    <a href="/operator/users/edit/<%= user.id %>"><i class="material-icons md-36">edit</i></a>
    <i class="material-icons md-36 md-danger">delete</i>
  </div>
</div>
